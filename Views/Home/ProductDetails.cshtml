@model Buoi6.Models.Product
@{
    ViewData["Title"] = "Chi tiết sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-4">Chi tiết sản phẩm</h1>

<div class="card shadow-sm no-hover-effect">
    <div class="card-body">
        <h4 class="card-title">@Model.Name</h4>
        <hr />
        <div class="row">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <div class="col-md-4">
                    <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded" style="max-height: 300px; object-fit: cover;" />
                </div>
            }
            else
            {
                <div class="col-md-4">
                    <img src="~/images/placeholder.jpg" alt="Placeholder" class="img-fluid rounded" style="max-height: 300px; object-fit: cover;" />
                </div>
            }
            <div class="col-md-8">
                <dl class="row">
                    <dt class="col-sm-3">Tên sản phẩm</dt>
                    <dd class="col-sm-9">@Model.Name</dd>
                    <dt class="col-sm-3">Giá</dt>
                    <dd class="col-sm-9 highlight-price">@Model.Price.ToString("N0") VNĐ</dd> @* Đổi "C" sang "N0" và thêm "VNĐ" cho rõ ràng *@
                    <dt class="col-sm-3">Mô tả</dt>
                    <dd class="col-sm-9">@(Model.Description ?? "Đang cập nhật...")</dd> @* Hiển thị "Đang cập nhật" nếu Description null *@
                    <dt class="col-sm-3">Danh mục</dt>
                    <dd class="col-sm-9"><span class="highlight-category">@(Model.Category?.Name ?? "Không có")</span></dd>
                </dl>

                @* KHỐI THÊM VÀO GIỎ HÀNG & MUA NGAY *@
                <div class="mt-4">
                    <form asp-controller="ShoppingCart" asp-action="AddToCart" method="post" class="d-inline-flex align-items-center me-3">
                        <input type="hidden" name="productId" value="@Model.Id" />
                        <div class="input-group input-group-sm w-auto me-2" style="width: 120px;">
                            @* Giới hạn chiều rộng input group *@
                            <label for="quantity" class="visually-hidden">Số lượng:</label>
                            <span class="input-group-text" id="quantity-label">SL:</span>
                            <input type="number" id="quantity" name="quantity" class="form-control" value="1" min="1" aria-labelledby="quantity-label" />
                        </div>
                        <button type="submit" class="btn btn-success btn-sm">
                            <i class="fas fa-cart-plus"></i> Thêm vào giỏ hàng
                        </button>
                    </form>

                    @* NÚT MUA NGAY (TÙY CHỌN: mua 1 sản phẩm và chuyển thẳng đến thanh toán) *@
                    <form asp-controller="ShoppingCart" asp-action="BuyNow" method="post" class="d-inline-block">
                        @* Cần action BuyNow trong ShoppingCartController *@
                        <input type="hidden" name="productId" value="@Model.Id" />
                        <input type="hidden" name="quantity" value="1" /> @* Mặc định mua 1 sản phẩm *@
                        <button type="submit" class="btn btn-warning btn-sm">
                            <i class="fas fa-money-bill-wave"></i> Mua ngay
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-controller="Home" asp-action="Products" class="btn btn-secondary">Quay lại danh sách</a> @* Đảm bảo asp-controller="Home" *@
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    /* Tùy chỉnh CSS để làm nổi bật giá và thể loại */
    .highlight-price {
        font-size: 1.2em;
        font-weight: bold;
        color: #e44d26;
    }

    .highlight-category {
        font-weight: bold;
        color: #212529
    }

    .no-hover-effect {
        /* Nếu bạn có hiệu ứng hover trên card, đây là cách để loại bỏ nó cho chi tiết sản phẩm */
        transition: none !important;
        transform: none !important;
        box-shadow: 0 .125rem .25rem rgba(0,0,0,.075) !important;
    }
</style>

