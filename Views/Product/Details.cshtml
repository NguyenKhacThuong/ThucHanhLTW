@model Buoi6.Models.Product

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImageUrl)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ImageUrl)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Name)
        </dd>
        <dt class="col-sm-2">
            Ảnh sản phẩm
        </dt>
        <dd class="col-sm-10">
            @if (Model.ProductImages != null && Model.ProductImages.Any())
            {
                foreach (var image in Model.ProductImages)
                {
                    <img src="@image.ImageUrl" alt="Product Image" style="width: 200px; height: auto; margin: 5px;" />
                }
            }
            else
            {
                <p>Không có ảnh nào.</p>
            }
        </dd>
    </dl>
</div>

<div>
    @if (User.IsInRole("Admin"))
    {
        <form asp-action="AddImage" method="post">
            <input type="hidden" name="productId" value="@Model?.Id" />
            <input type="text" name="imageUrl" placeholder="Nhập URL ảnh" class="form-control" style="width: 300px; margin-top: 10px;" />
            <button type="submit" class="btn btn-primary" style="margin-top: 10px;">Thêm ảnh</button>
        </form>
    }
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>