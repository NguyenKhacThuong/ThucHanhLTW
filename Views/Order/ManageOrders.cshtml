@model IEnumerable<Buoi6.Models.Order>

@{
    ViewData["Title"] = "Quản lý Đơn hàng";
}

<h1 class="mb-4">Quản lý Đơn hàng</h1>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info" role="alert">
        Chưa có đơn hàng nào được tạo.
    </div>
}
else
{
    <table class="table table-bordered table-hover">
        <thead class="table-primary">
            <tr>
                <th>Mã Đơn hàng</th>
                <th>Tên Khách hàng</th>
                <th>Số điện thoại</th>
                <th>Địa chỉ giao hàng</th>
                <th>Ngày đặt</th>
                <th>Tổng tiền</th>
                <th>Trạng thái</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                    <td>@Html.DisplayFor(modelItem => item.CustomerName)</td>
                    <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                    <td>@Html.DisplayFor(modelItem => item.ShippingAddress)</td>
                    <td>@Html.DisplayFor(modelItem => item.OrderDate)</td>
                    <td>@item.TotalPrice.ToString("N0") VNĐ</td>
                    <td>@Html.DisplayFor(modelItem => item.Status)</td>
                    <td>
                        <a asp-action="OrderDetails" asp-route-id="@item.Id" class="btn btn-sm btn-info">Chi tiết</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}