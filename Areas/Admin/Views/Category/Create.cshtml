@model Buoi6.Models.Category

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-4">Thêm danh mục mới</h1>

<h4 class="mb-3">Danh mục</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <div class="form-group mb-3">
                <input asp-for="Name" class="form-control" placeholder="Nhập tên danh mục"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success"><i class="bi bi-plus-circle"></i> Thêm mới</button>
                <a asp-action="Index" class="btn btn-secondary ms-2"><i class="bi bi-arrow-left"></i> Quay lại danh sách</a>
            </div>
        </form>
    </div>
</div>